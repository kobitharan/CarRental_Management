
@model Car_Rental_Management_System.Areas.Admin.ViewModels.CarViewModels
@{
     ViewData["Title"] = "Add Car";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
    
}


@* <h2>@ViewData["Title"]</h2> *@

<form asp-controller="Car" asp-action="AddCar" method="post">




    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Car Details Form</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
        <style>
            body {
                background: linear-gradient(135deg, #1e3c72, #2a5298);
                min-height: 100vh;
                display: flex;
                justify-content: center;
                align-items: center;
            }

            .form-card {
                background: #4db8ff;
                padding: 30px;
                border-radius: 15px;
                box-shadow: 0px 6px 15px rgba(0,0,0,0.2);
                max-width: 700px;
                width: 100%;
            }

                .form-card label {
                    font-weight: 600;
                }

            .btn-submit {
                background: #1e3c72;
                color: #fff;
                font-weight: bold;
                border-radius: 8px;
                transition: 0.3s;
            }

                .btn-submit:hover {
                    background: #142850;
                }
        </style>
    </head>
    <body>

        <div class="form-card">
            <form>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="Brand" class="form-label"></label>
                        <select asp-for="Brand" class="form-select">
                            <option value="">Select Brand</option>
                            <option value="Toyota">Toyota</option>
                            <option value="Honda">Honda</option>
                            <option value="BMW">BMW</option>
                        </select>
                        <span asp-validation-for="Brand" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Mileage</label>
                        <input type="text" class="form-control" placeholder="Enter mileage">
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label">Model</label>
                        <input type="text" class="form-control" placeholder="Enter model">
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Seat Count</label>
                        <input type="number" class="form-control" placeholder="Enter seat count">
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label">Year</label>
                        <input type="number" class="form-control" placeholder="Enter year">
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Price Per Day</label>
                        <input type="text" class="form-control" placeholder="Enter price">
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label">Gear Type</label>
                        <select class="form-select">
                            <option>Automatic</option>
                            <option>Manual</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Fuel Type</label>
                        <select class="form-select">
                            <option>Petrol</option>
                            <option>Diesel</option>
                            <option>Electric</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Car  Image</label>
                        <input type="text" class="form-control" placeholder="Enter Image">
                       
                    </div>
                   
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-submit px-4 py-2">
                        Submit Car Details
                    </button>
                </div>
            </form>
        </div>

    </body>
</html>
 
</form>
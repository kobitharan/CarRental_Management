


@{
    ViewData["Title"] = "Home";
    Layout = "_Layout";
}

<div class="hero-section text-white text-center d-flex align-items-center justify-content-center">
    <div class="overlay"></div>
    <div class="content">
        <h1 class="display-4 fw-bold">Fast. Affordable. Reliable.</h1>
        <p class="lead">Find the perfect car for your journey today.</p>
        <div class="mt-4">
            <a href="/Cars" class="btn btn-primary btn-lg me-3">Browse Cars</a>
            <a href="/Bookings/Create" class="btn btn-outline-light btn-lg">Book Now</a>
        </div>
    </div>
</div>

<section class="container my-5">
    <h2 class="text-center mb-4">Why Choose Us?</h2>
    <div class="row text-center">
        <div class="col-md-4">
            <i class="bi bi-speedometer2 display-4 text-primary"></i>
            <h4>Fast Booking</h4>
            <p>Book your vehicle in just a few clicks with our easy-to-use platform.</p>
        </div>
        <div class="col-md-4">
            <i class="bi bi-currency-dollar display-4 text-primary"></i>
            <h4>Best Prices</h4>
            <p>Get the most competitive rates on all types of cars.</p>
        </div>
        <div class="col-md-4">
            <i class="bi bi-shield-check display-4 text-primary"></i>
            <h4>Safe & Secure</h4>
            <p>Your safety is our priority. All cars are insured and well-maintained.</p>
        </div>
    </div>
</section>

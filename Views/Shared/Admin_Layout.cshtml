@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Admin</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            display: flex;
            min-height: 100vh;
        }
        .sidebar {
            width: 220px;
            background-color: #343a40;
            color: white;
            padding-top: 20px;
        }
        .sidebar a {
            color: white;
            display: block;
            padding: 10px 20px;
            text-decoration: none;
        }
        .sidebar a:hover {
            background-color: #495057;
        }
        .main-content {
            flex-grow: 1;
            padding: 20px;
        }
        .navbar {
            background-color: #212529;
            color: white;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar d-flex flex-column">
        <div class="fs-5 fw-bold text-center mb-4">Admin Panel</div>
        <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
        <a asp-area="Admin" asp-controller="User" asp-action="Index">Users</a>
        <a asp-controller="Home" asp-action="Index">Go to Website</a>
        <a asp-area="Admin" asp-controller="Account" asp-action="Logout">Logout</a>
    </div>

    <!-- Main Content -->
    <div class="main-content w-100">
        <nav class="navbar px-3 mb-4">
            <span class="navbar-brand mb-0 h5">Admin - @ViewData["Title"]</span>
        </nav>

        <div class="container-fluid">
            @RenderBody()
        </div>
    </div>

    @RenderSection("Scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
